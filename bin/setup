#!/bin/bash

debug=false

if [ "$1" == "debug" ]; then
  debug=true
fi

echo "Installing npm packages"

packages="bower grunt grunt-contrib-sass grunt-contrib-coffee grunt-haml testem"

if $debug; then
  npm install $packages
else
  npm install $packages > /dev/null 2>&1
fi

rc=$?
if [[ $rc != 0 ]] ; then
  echo "Failed installing npm packages ... Try again with bin/setup debug"
  exit $rc
fi

echo "Installing JS deps via bower"

bower install > /dev/null 2>&1

if $debug; then
  bower install
else
  bower install > /dev/null 2>&1
fi

rc=$?
if [[ $rc != 0 ]] ; then
  echo "Failed installing JS deps ... Try again with bin/setup debug"
  exit $rc
fi
